# PM Internship AI Engine - Environment Configuration

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-here
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://pm_user:pm_password@localhost:5432/pm_internship_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# AI Model Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
EMBEDDING_MODEL=text-embedding-ada-002
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Authentication
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
FROM_EMAIL=noreply@pm-internship-ai.gov.in

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key

# External APIs
AADHAAR_API_URL=https://api.aadhaar.gov.in
AADHAAR_API_KEY=your-aadhaar-api-key
DIGILOCKER_API_URL=https://api.digilocker.gov.in
DIGILOCKER_API_KEY=your-digilocker-api-key

# Social Media Integration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Blockchain Configuration
BLOCKCHAIN_NETWORK=ethereum
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id
SMART_CONTRACT_ADDRESS=your-contract-address

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=pm_internship

# MinIO/S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=pm-internship-files

# AI Matching Configuration
MATCHING_THRESHOLD=0.7
MAX_MATCHES_PER_STUDENT=10
BIAS_DETECTION_ENABLED=true

# Workflow Automation
N8N_API_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key

# Language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,bn,te,mr,ta,gu,ur,kn,or,ml,pa,as

# Feature Flags
ENABLE_VIDEO_INTERVIEWS=false
ENABLE_BLOCKCHAIN_AUDIT=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MOBILE_APP=true

# Security
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0